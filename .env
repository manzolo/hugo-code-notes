# .env.example - Template per la configurazione
# Copia questo file in .env e personalizza i valori

# User and Group IDs for Docker permissions
UID=1000
GID=1000

# Development Configuration
DEV_HOST=0.0.0.0
DEV_PORT=8080
DEV_BASE_URL=http://localhost:8080/

# Production Configuration
PROD_HOST=0.0.0.0
PROD_PORT=8080
PROD_BASE_URL=https://www.manzolo.it/

# Environment selector (dev|production)
ENVIRONMENT=dev

# Remote SSH Configuration (per deploy automatico)
SSH_HOST=root@domotics.lan
SSH_PORT=22
SSH_WORKSPACE=/root/hugo
SSH_EXPORT=/root/hugo/export

# Optional: Backup configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Optional: Notification webhooks
DEPLOY_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Site Configuration Override
SITE_TITLE="Manzolo Code Notes"
SITE_DESCRIPTION="Technical blog with tutorials and programming notes"

# Advanced Options
HUGO_ENV=production
HUGO_MINIFY=true
HUGO_BUILD_DRAFTS=false
