# Hugo Blog Environment Configuration Template
# ==============================================
# Copy this file to .env and customize the values

# Server Configuration
HUGO_VERSION=0.150.0
HOST=0.0.0.0
PORT=8080

# Site Configuration
SITE_BASE_URL=http://localhost:8080/
SITE_TITLE=Code Notes
SITE_DESCRIPTION=Technical blog with tutorials, guides and programming notes
SITE_AUTHOR=Your Name Here
SITE_LANGUAGE=en-US

# Hugo Configuration
HUGO_ENV=development
HUGO_VERSION=0.150.0
HUGO_THEME=PaperMod

# Build Configuration
BUILD_DRAFTS=true
BUILD_FUTURE=true
MINIFY_OUTPUT=true

# Development Settings
WATCH_MODE=true
POLL_INTERVAL=1000ms
DISABLE_FAST_RENDER=false
LIVE_RELOAD=true

# Docker Configuration
DOCKER_COMPOSE_PROJECT=hugo-blog
DOCKER_NETWORK=hugo-network

# Analytics (replace with your actual IDs)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-verification-code
BING_SITE_VERIFICATION=your-bing-verification-code
YANDEX_SITE_VERIFICATION=your-yandex-verification-code

# Social Links (replace with your actual URLs)
SOCIAL_X_URL=https://x.com/yourusername
SOCIAL_GITHUB_URL=https://github.com/yourusername
SOCIAL_LINKEDIN_URL=https://linkedin.com/in/yourusername
SOCIAL_STACKOVERFLOW_URL=https://stackoverflow.com/users/youruser

# Content Configuration
DEFAULT_CONTENT_TYPE=posts
POSTS_PER_PAGE=10
ENABLE_COMMENTS=false
ENABLE_SEARCH=true

# Theme Settings
DEFAULT_THEME=auto
ENABLE_THEME_TOGGLE=true
SHOW_READING_TIME=true
SHOW_SHARE_BUTTONS=true
SHOW_POST_NAV_LINKS=true
SHOW_BREADCRUMBS=true
SHOW_CODE_COPY_BUTTONS=true
SHOW_WORD_COUNT=true
SHOW_TOC=true
TOC_OPEN=false

# Security
ENABLE_ROBOTS_TXT=true
ENABLE_GIT_INFO=false

# Performance
ENABLE_EMOJI=true
ENABLE_CJK_LANGUAGE=false